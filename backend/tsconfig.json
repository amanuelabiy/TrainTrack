{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "./src",
    "typeRoots": ["node_modules/@types", "@types"],
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "sourceMap": true,
    "noImplicitAny": true
  },
  "ts-node": {
    "files": true
  },
  "include": ["src/**/*", "@types/**/*"]
}
